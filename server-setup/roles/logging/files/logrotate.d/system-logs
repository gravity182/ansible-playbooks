/var/log/boot.log {
    weekly
    rotate 4
    missingok
    notifempty
    compress
    delaycompress
    create 0640 root root
    dateext
    sharedscripts
    postrotate
        /usr/lib/rsyslog/rsyslog-rotate
    endscript
}
